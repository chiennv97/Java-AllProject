<configuration>
  <appender name="FILE" class="ch.qos.logback.core.FileAppender">
    <file>hw.log</file>
    <encoder>
      <pattern>%date %level [%thread] %msg%n</pattern>
    </encoder>
  </appender>
  <!--<logger name="person1" level="INFO" />-->
  <!--<logger name="person2" level="DEBUG" />-->
  <root level="debug">
    <appender-ref ref="FILE" />
  </root>

</configuration>